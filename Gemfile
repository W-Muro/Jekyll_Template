source "https://rubygems.org"

# GitHub Pagesを使用しない場合
gem 'jekyll', '~> 4.2'

# GitHub Pagesを使用する場合
# gem "github-pages", group: :jekyll_plugins

group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-paginate-v2"
end

